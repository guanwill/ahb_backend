extends layout

block content
  .container
    if message != ""
        p.alert.alert-success= message
    if error != ""
        p.alert.alert-danger= error

    form.form-signin(role='form', action=`/verify_account`,method="post")
        .row
            .col-md-6.col-sm-6
                h4 Resend account verification email
                br
                p Enter username(email) to receive an email to verify account.
                br 
                input.form-control(type='text', name="username", placeholder='username')
                br
        .row            
            .col-md-6.col-sm-12
                button.btn.btn-primary.btn-block(type='submit') SEND   
            .col
            .col
        